<script>
function adicionarTarefa() {

    let tarefaDigitada = document.getElementById("tarefa").value;

  

    let lista = document.createElement("li");
    
    let texto = document.createElement("span");
    texto.innerText = tarefaDigitada;
    
    let botao = document.createElement("button");
   
    botao.innerText = "Feito";

    botao.onclick = function () {
      
      document.getElementById("tarefasConcluidasLista").innerText = tarefaDigitada;

        lista.remove();
    };


    lista.appendChild(texto);
    lista.appendChild(botao);

    document.getElementById("tarefasDiarias").appendChild(lista);
    document.getElementById("tarefa").value = "";

    botao.classList.add("botaoFeito");


}

function adicionarTarefaLongoPrazo() {

    let longoPrazoDigitada = document.getElementById("tarefaLongoPrazo").value;

    let listaLongoPrazo = document.createElement ("li");
    
    let textoLongoPrazo = document.createElement ('span');
    textoLongoPrazo.innerText = longoPrazoDigitada;
let botaoLongoPrazo = document.createElement ('button');
botaoLongoPrazo.innerText = "Feito"; 

}

 botaoLongoPrazo.onclick = function () {

 

    listaLongoPrazo.appendChild(textoLongoPrazo);
    listaLongoPrazo.appendChild(botaoLongoPrazo);
 
 

    botaoLongoPrazo.classList.add("botaoFeito");
    document.getElementById("tarefasParaFazer").appendChild(listaLongoPrazo);
    document.getElementById("tarefaLongoPrazo").value = "";
    
  
};

  




    </script>


