<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do</title>





</head>


<body>
       <h1>Adicione uma tarefa diária</h1>
    <input type="text" id="tarefa"> <button onclick="adicionarTarefa()">Adicionar</button>

    <h1>Adicione uma tarefa de longo prazo</h1>
   <input type="text" id="tarefaLongoPrazo"> <button onclick="adicionarTarefaLongoPrazo()">Adicionar</button>


      
    
<ul id=listaDeTarefas></ul>

<h1>Tarefas Diárias</h1>          
<ul id="tarefasDiarias"></ul>

<h1>Tarefas Longo Prazo</h1>
<ul id="tarefasParaFazer"></ul>





<script>
function adicionarTarefa() {

    let tarefaDigitada = document.getElementById("tarefa").value;

   // document.getElementById("tarefasDiarias").innerText = tarefaDigitada;//

    let lista = document.createElement("li");
    lista.innerText = tarefaDigitada;
    document.getElementById("tarefasDiarias").appendChild(lista);
    document.getElementById("tarefa").value = "";
}

function adicionarTarefaLongoPrazo() {

    let longoPrazoDigitada = document.getElementById("tarefaLongoPrazo").value;

    document.getElementById("tarefasParaFazer").innerText = longoPrazoDigitada;
}

</script>
</body>
