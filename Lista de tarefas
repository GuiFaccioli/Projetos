<script>
function adicionarTarefa() {

    let tarefaDigitada = document.getElementById("tarefa").value;

   // document.getElementById("tarefasDiarias").innerText = tarefaDigitada;//

    let lista = document.createElement("li");
    lista.innerText = tarefaDigitada;
    document.getElementById("tarefasDiarias").appendChild(lista);
    document.getElementById("tarefa").value = "";
}

function adicionarTarefaLongoPrazo() {

    let longoPrazoDigitada = document.getElementById("tarefaLongoPrazo").value;

    document.getElementById("tarefasParaFazer").innerText = longoPrazoDigitada;
}

    </script>

